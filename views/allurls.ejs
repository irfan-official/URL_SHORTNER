<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="min-h-screen w-full bg-zinc-700 flex flex-col gap-10 items-center justify-center"
  >
    <div class="flex flex-col justify-center gap-10 w-3/5">
      <h1 class="text-center text-4xl text-white mt-7">Database</h1>

      <% if (locals.urls) {%>

      <table class="text-white">
        <thead class="border">
          <th class="py-2 border-r border-dotted">S. No</th>
          <th class="border-r border-dotted">ShortID</th>
          <th class="border-r border-dotted">Redirected</th>
          <th class="border-r border-dotted py-4">Generated By</th>
          <th class="px-4">Clicks</th>
        </thead>
        <tbody class="">
          <% urls.forEach((url, index) => { %>
          <tr class="border"></tr>
          <td class="border px-3 py-2"><%= index + 1 %></td>
          <td class="border-r border-b px-3"><%= url.shortId %></td>
          <td class="border-r border-b px-3"><%= url.redirectURL %></td>
          <td class="border-r border-b px-3"><%= url.createdBy %></td>
          <td class="border-r border-b px-3">
            <%= url.visitedHistory.length %>
          </td>

          <% }) %>
        </tbody>
      </table>

      <% } %>
    </div>
  </body>
</html>
